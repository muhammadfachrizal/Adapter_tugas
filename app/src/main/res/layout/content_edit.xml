<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mfachrizal.student.Edit"
    android:background="#607D8B"
    android:weightSum="1">


    <TextView
        android:text="ID   :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/id"
        android:textColor="#E0F7FA"
        android:layout_alignBaseline="@+id/eid"
        android:layout_alignBottom="@+id/eid"
        android:layout_alignRight="@+id/noreg"
        android:layout_alignEnd="@+id/noreg" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/eemail"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/enama"
        android:layout_alignStart="@+id/enama"
        android:textColor="#E0F7FA"
        android:layout_width="300dp" />



    <TextView
        android:text="Nama :"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/nama"
        android:layout_below="@+id/noreg"
        android:textColor="#E0F7FA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Noreg :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:textSize="18sp"
        android:id="@+id/noreg"
        android:textColor="#E0F7FA"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Email  :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="27dp"
        android:id="@+id/email"
        android:textColor="#E0F7FA"
        android:layout_below="@+id/enama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/ephone"
        android:layout_width="300dp"
        android:textColor="#E0F7FA"
        android:layout_alignBaseline="@+id/phone"
        android:layout_alignBottom="@+id/phone"
        android:layout_alignLeft="@+id/eemail"
        android:layout_alignStart="@+id/eemail"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_clear_black_24dp"
        android:id="@+id/cancel"
        app:backgroundTint="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/OK"
        android:layout_toStartOf="@+id/OK" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_done_black_24dp"
        app:fabSize="mini"
        app:backgroundTint="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Phone :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#E0F7FA"
        android:id="@+id/phone"
        android:layout_below="@+id/eemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/eid"
        android:textColor="#E0F7FA"
        android:layout_width="300dp"
        android:layout_above="@+id/enoreg"
        android:layout_toRightOf="@+id/phone"
        android:layout_toEndOf="@+id/phone"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enoreg"
        android:textColor="#E0F7FA"
        android:layout_width="300dp"
        android:layout_alignBaseline="@+id/noreg"
        android:layout_alignBottom="@+id/noreg"
        android:layout_alignLeft="@+id/eid"
        android:layout_alignStart="@+id/eid" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enama"
        android:textColor="#E0F7FA"
        android:layout_width="300dp"
        android:layout_alignBaseline="@+id/nama"
        android:layout_alignBottom="@+id/nama"
        android:layout_alignLeft="@+id/enoreg"
        android:layout_alignStart="@+id/enoreg" />



</RelativeLayout>
